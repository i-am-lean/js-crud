<main class='main'>
  {{#with data}}
       
        <ul class="orders">
           {{> heading title="Мої замовлення"}}
          {{#each list}}

           <a href="/purchase-details?id={{id}}" class="order-link">  
            <li class="order">
              <div class="order-id hr"> 
                <div>ID:</div> <div>{{id}}</div>
              </div>
              <div class="order-item">
                <div class="hr">Товари</div>
                <div>{{productTitle}}</div>
              </div>
              <div class="order-item">
                <div class="hr">Сума замовлення</div>
                <div>{{totalPrice}} грн</div>
              </div>              
              <div class="order-item">
                <div class="hr">Нараховані бонуси</div>
                <div>{{bonus}} грн</div>
              </div>
            </li>
            </a>
          {{/each}}
        </ul>
  {{/with}}
</main>


