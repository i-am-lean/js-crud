{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<h1 class='list__title'>Спиcок товарів</h1>

{{#with data.products}}
  {{#if isEmpty}}
    <mark>Немає товарів</mark>
  {{else}}

    {{#each list}}

      <div class='card'>
        <div class='card__title'>{{name}}</div>
        <div class='card__description'>{{description}}</div>
        <div class='card__id'>ID: {{id}}</div>
        <div class='card__box'>
          <div class='card__price'>{{price}}</div>
          <button class='card__upd'><a
              href='/product-edit?id={{id}}'
            >Редагувати</a></button>
        </div>
      </div>

    {{/each}}
  {{/if}}
{{/with}}

