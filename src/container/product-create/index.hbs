<main class='main'>
  <section>
    <div class='form'>
      <h1 class='form__title'>Створення товару</h1>
      <form method='POST' action='/product-create'>

        <div class='form__content form__card'>
          <div class='form__field'>
            <h2 class='form__header'>Інформація про товар</h2>
          </div>

          <div class='form__line'>
            <div class='form__field'>
              <lable for='name' class='form_lable'>Назва
                товару:</lable>
              <input
                type='name'
                name='name'
                class='form__input'
              />
            </div>

            <div class='form__field'>
              <lable
                for='price'
                class='form_lable'
              >Ціна:</lable>
              <input
                type='price'
                name='price'
                class='form__input'
              />
            </div>
          </div>

          <div class='form__field'>
            <lable
              for='description'
              class='form_lable'
            >Короткий опис товару:</lable>
            <input
              type='description'
              name='description'
              class='form__input'
            />
          </div>

          <div class='form__field card_footer'></div>
          <button class='form__button click'>Створити товар</button>
        </div>

      </form>
    </div>
  </section>
</main>

